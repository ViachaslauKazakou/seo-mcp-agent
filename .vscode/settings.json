{
    "python.defaultInterpreterPath": "./.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "terminal.integrated.env.osx": {
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
    },
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=120"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
        "flake8.enabled": true,
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E501,W503,E203"
    ],
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    // "editor.renderWhitespace": "boundary",
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.suggestSelection": "first",
    "editor.snippetSuggestions": "top",
    "editor.parameterHints.enabled": true,
    "editor.codeLens": true,
    // "editor.gotoLocation.multiple": "peek",
    "editor.hover.enabled": "on",
    "editor.linkedEditing": true,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.unicodeHighlight.allowedCharacters": {},
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "off",
    // Docker debugging settings
    "python.debug.redirectOutput": true,
    "python.debug.showReturnValue": true,
    "python.debug.internalConsoleOptions": "openOnSessionStart",
    // Добавьте эти настройки для увеличения шрифта
    "chat.editor.fontSize": 16,
    "chat.editor.lineHeight": 16,
    "workbench.tree.indent": 18,
    "workbench.tree.renderIndentGuides": "always",
    "terminal.integrated.fontSize": 12,
    "debug.console.fontSize": 12,
    "markdown.preview.fontSize": 12,
    // Для увеличения шрифта в табах и других элементах интерфейса
    "window.zoomLevel": 0.5,
    // Альтернативно, для более точного контроля:
    "editor.accessibilitySupport": "auto"
}
